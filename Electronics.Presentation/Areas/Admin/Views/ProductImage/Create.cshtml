@model Electronics.Presentation.Areas.Admin.Views.ProductImage.ProductImageVM

@{
    ViewData["Title"] = "Add Product Image";
}

<h2>Upload Product Images</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="ProductId">Product</label>
        <select asp-for="ProductId" asp-items="Model.ProductList" class="form-control">
            <option value="">-- Select Product --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Images">Select Images</label>
        <input asp-for="Images" type="file" multiple class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
