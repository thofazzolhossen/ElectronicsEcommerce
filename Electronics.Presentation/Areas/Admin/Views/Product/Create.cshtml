@model Electronics.Presentation.Areas.Admin.Views.Product.ProductVM

<h2>Add New Product</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Product.Name" class="control-label"></label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Price" class="control-label"></label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Quantity" class="control-label"></label>
        <input asp-for="Product.Quantity" class="form-control" />
        <span asp-validation-for="Product.Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.ProductTypeId" class="control-label"></label>
        <select asp-for="Product.ProductTypeId" class="form-control" asp-items="Model.ProductTypes">
            <option value="">-- Select Type --</option>
        </select>
        <span asp-validation-for="Product.ProductTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.ProductTagId" class="control-label"></label>
        <select asp-for="Product.ProductTagId" class="form-control" asp-items="Model.ProductTags">
            <option value="">-- Select Tag --</option>
        </select>
        <span asp-validation-for="Product.ProductTagId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.DiscountId" class="control-label"></label>
        <select asp-for="Product.DiscountId" class="form-control" asp-items="Model.Discounts">
            <option value="">-- Select Discount (Optional) --</option>
        </select>
        <span asp-validation-for="Product.DiscountId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Description" class="control-label"></label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Specification" class="control-label"></label>
        <textarea asp-for="Product.Specification" class="form-control"></textarea>
        <span asp-validation-for="Product.Specification" class="text-danger"></span>
    </div>



    <br />
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>
