@model Electronics.Presentation.Areas.Admin.Views.ProductTag.ProductTagIndexVM

@{
    ViewData["Title"] = "Product Tags";
}

<h2>@ViewData["Title"]</h2>

<p class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add New Product Tag</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Tag</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductTags)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
