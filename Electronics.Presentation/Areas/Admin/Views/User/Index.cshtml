@model Electronics.Presentation.Areas.Admin.Views.User.UserViewModel

<h2>User List</h2>

<div class="mb-3">
    <a asp-area="Admin" asp-controller="User" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New User
    </a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Full Name</th>
            <th>User Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>
