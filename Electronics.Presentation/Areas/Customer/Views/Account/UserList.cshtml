
@model List<Electronics.Presentation.ViewModels.UserListViewModel>
@{
    ViewData["Title"] = "Registered Users";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Registered Users</h2>
    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Roles</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].FullName</td>
                    <td>@Model[i].Email</td>
                    <td>
                        @if (Model[i].Roles.Any())
                        {
                            @string.Join(", ", Model[i].Roles)
                            <a asp-action="AssignRole" asp-route-userId="@Model[i].Id" class="btn btn-sm btn-warning">Change Role</a>
                        }
                        else
                        {
                            <a asp-action="AssignRole" asp-route-userId="@Model[i].Id" class="btn btn-sm btn-warning">Set Role</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

