@using Electronics.Presentation.ViewModels;
@model VerifyEmailViewModel;

@{
    ViewData["Title"] = "Verify Email";
}

<div class="account-container d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="account-box bg-white p-4 shadow rounded" style="min-width: 350px;">
        <h3 class="text-center mb-4">Verify Email</h3>
        <form asp-action="VerifyEmail" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email address</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 py-2">
                <i class="fas fa-check-circle me-1"></i> Verify Email
            </button>

            <div class="text-center mt-3">
                <a asp-action="Login" class="text-decoration-none">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
    @await Html.PartialAsync("_AlertifyMessage")
}

