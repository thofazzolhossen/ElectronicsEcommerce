@model IEnumerable<Electronics.Application.Product.ProductDto>

@{
    ViewData["Title"] = "All Products";
    var type = ViewBag.FilteredType as string;
    var otherProducts = ViewBag.OtherProducts as List<Electronics.Application.Product.ProductDto>;
    var grouped = Model.GroupBy(p => p.ProductTypeName);
}

<div class="container mt-4">
    <!-- Search Filter -->
    <div class="row mb-3 justify-content-end">
        <div class="col-md-3">
            <input type="text" id="searchInput" class="form-control" placeholder="Search products..." />
        </div>
    </div>

    <!-- Grouped Filtered Products -->
    <div id="productCards">
        @if (!string.IsNullOrEmpty(type))
        {
            <div class="mt-4">
                <div class="d-flex justify-content-between align-items-center">
                    <h4>@type Products</h4>
                </div>
                <hr />
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-md-3 mb-4 product-card" data-name="@product.Name" data-description="@product.Description">
                            <div class="card">
                                <img src="@Url.Content("~/" + product.ImageUrls.FirstOrDefault())" class="card-img-top" />
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">TK: @product.Price</p>
                                    <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-primary btn-sm">View</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <!-- No filter, show grouped -->
            @foreach (var group in grouped)
            {
                <div class="mt-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>@group.Key</h4>
                        <a href="@Url.Action("AllProducts", "Home", new { type = group.Key })" class="btn btn-outline-primary btn-sm">More</a>
                    </div>
                    <hr />
                    <div class="row">
                        @foreach (var product in group)
                        {
                            <div class="col-md-3 mb-4 product-card" data-name="@product.Name" data-description="@product.Description">
                                <div class="card">
                                    <img src="@Url.Content("~/" + product.ImageUrls.FirstOrDefault())" class="card-img-top" />
                                    <div class="card-body">
                                        <h5 class="card-title">@product.Name</h5>
                                        <p class="card-text">TK: @product.Price</p>
                                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-primary btn-sm">View</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>

    <!-- Other Products Section -->
    @if (!string.IsNullOrEmpty(type) && otherProducts?.Any() == true)
    {
        <hr />
        <h4>Other Products</h4>
        <div id="othersProducts">
            <div class="row">
                @foreach (var product in otherProducts)
                {
                    <div class="col-md-3 mb-4 product-card" data-name="@product.Name" data-description="@product.Description">
                        <div class="card">
                            <img src="@Url.Content("~/" + product.ImageUrls.FirstOrDefault())" class="card-img-top" />
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">TK: @product.Price</p>
                                <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-primary btn-sm">View</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- No results message -->
<div id="noResults" class="text-center mt-4" style="display:none;">
    <p class="text-muted">No products found.</p>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#searchInput').on('keyup', function () {
                let value = $(this).val().toLowerCase();
                let hasResults = false;

                $('.product-card').each(function () {
                    let name = $(this).data('name')?.toLowerCase() || '';
                    let desc = $(this).data('description')?.toLowerCase() || '';
                    let matched = name.includes(value) || desc.includes(value);
                    $(this).toggle(matched);
                    if (matched) hasResults = true;
                });

                $('#noResults').toggle(!hasResults);
            });
        });
    </script>
}
